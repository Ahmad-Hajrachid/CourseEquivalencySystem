@{
    Layout = "_Layout";
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            @* Pie chart section *@
            <div class="card">
                
                <div class="card-header bg-danger">
                    <h3 class="text-white">عدد الطلاب من الجامعات المختلفة</h3>  
                </div>
                <div class="card-body">
                    <div id="pie-chart-container">
                        @* Implement your pie chart here  *@
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            @* Equivalency accuracy section *@
            <div class="card">
                
                <div class="card-header bg-danger">
                    <h3 class="text-white">دقة المعادلات</h3>  
                </div>
                <div class="card-body">
                    <div>
                        @* Display accuracy data *@
                        نسبة الدقة: 85% @*this is just an example.*@
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            @* Number of requests section *@
            <div class="card">
                
                <div class="card-header bg-danger">
                    <h3 class="text-white">عدد المعادلات</h3>  
                </div>
                <div class="card-body">
                    <div>
                        @* Display number of requests *@
                        150 معادلة @*this is just an example.*@
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-12 text-center">
            <a asp-controller="Courses" asp-action="Index" class="btn btn-primary btn-lg btn-danger">تعديل المواد</a>
        </div>
    </div>
</div>