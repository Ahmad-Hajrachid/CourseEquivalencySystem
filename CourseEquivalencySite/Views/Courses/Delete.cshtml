@model CourseEquivalencySite.Models.Course

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="text-center">
        <h1>حذف المادة</h1>
        <h3>هل أنت متأكد أنك تريد حذف هذه المادة؟</h3>
    </div>

    <hr />

    <div class="row justify-content-center">
        <div class="col-md-8">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.CourseID)</th>
                        <td>@Html.DisplayFor(model => model.CourseID)</td>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.CourseName)</th>
                        <td>@Html.DisplayFor(model => model.CourseName)</td>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.CourseDescription)</th>
                        <td>@Html.DisplayFor(model => model.CourseDescription)</td>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.CourseWeight)</th>
                        <td>@Html.DisplayFor(model => model.CourseWeight)</td>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.CourseInstitution)</th>
                        <td>@Html.DisplayFor(model => model.CourseInstitution)</td>
                    </tr>
                </tbody>
            </table>

            <form asp-action="Delete">
                <input type="hidden" asp-for="CourseID" />
                <div class="text-center">
                    <input type="submit" value="حذف" class="btn btn-lg btn-danger rounded-pill" />
                    <a asp-action="Index" class="btn btn-lg btn-danger rounded-pill">الرجوع للقائمة</a>
                </div>
            </form>
        </div>
    </div>
</div>
