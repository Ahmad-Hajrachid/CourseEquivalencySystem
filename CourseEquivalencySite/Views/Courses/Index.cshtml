@model IEnumerable<CourseEquivalencySite.Models.Course>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="text-center">
        <h1 class="display-4"><strong>معلومات المواد</strong></h1>
    </div>

    <p>
        <a asp-action="Create" class="btn btn-lg btn-danger rounded-pill mt-4">اضافة مادة</a>
    </p>

    <table class="table table-striped table-bordered mt-4">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.courseID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.courseName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.courseDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.courseWeight)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.institutionId)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.courseID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.courseName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.courseDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.courseWeight)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.institutionId)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.courseID" class="btn btn-danger rounded-pill">تعديل</a> |
                        <a asp-action="Details" asp-route-id="@item.courseID" class="btn btn-danger rounded-pill">التفاصيل</a> |
                        <a asp-action="Delete" asp-route-id="@item.courseID" class="btn btn-danger rounded-pill">حذف</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>