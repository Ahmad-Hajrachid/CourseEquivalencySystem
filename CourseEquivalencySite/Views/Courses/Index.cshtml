@model IEnumerable<CourseEquivalencySite.Models.Course>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="text-center">
        <h1 class="display-4"><strong>معلومات المواد</strong></h1>
    </div>

    <p>
        <a asp-action="Create" class="btn btn-lg btn-danger rounded-pill mt-4">اضافة مادة</a>
    </p>

    <table class="table table-striped table-bordered mt-4">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CourseID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CourseName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CourseDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CourseWeight)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CourseInstitution)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CourseID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CourseName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CourseDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CourseWeight)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CourseInstitution)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.CourseID" class="btn btn-danger rounded-pill">تعديل</a> |
                        <a asp-action="Details" asp-route-id="@item.CourseID" class="btn btn-danger rounded-pill">التفاصيل</a> |
                        <a asp-action="Delete" asp-route-id="@item.CourseID" class="btn btn-danger rounded-pill">حذف</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>