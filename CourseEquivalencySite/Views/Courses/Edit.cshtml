@model CourseEquivalencySite.Models.Course

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="text-center">
        <h1>تعديل</h1>
        <h4>المواد</h4>
    </div>

    <hr />

    <div class="row justify-content-center">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="courseID" />

                <div class="form-group">
                    <label asp-for="courseID" class="control-label"></label>
                    <input asp-for="courseID" class="form-control" />
                    <span asp-validation-for="courseID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="courseName" class="control-label"></label>
                    <input asp-for="courseName" class="form-control" />
                    <span asp-validation-for="courseName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="courseDescription" class="control-label"></label>
                    <input asp-for="courseDescription" class="form-control" />
                    <span asp-validation-for="courseDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="courseWeight" class="control-label"></label>
                    <input asp-for="courseWeight" class="form-control" />
                    <span asp-validation-for="courseWeight" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="institutionId" class="control-label"></label>
                    <input asp-for="institutionId" class="form-control" />
                    <span asp-validation-for="institutionId" class="text-danger"></span>
                </div>

                <div class="form-group text-center mt-4 ">
                    <input type="submit" value="حفظ" class="btn btn-lg btn-danger rounded-pill" />
                    <a asp-action="Index" class="btn btn-lg btn-danger rounded-pill">الرجوع للقائمة</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
